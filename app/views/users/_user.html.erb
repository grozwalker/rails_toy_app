<li class="list-group-item">
    <%= gravatar_for user %>
    <%= link_to user.name, user_path(user) %>
    <% if current_user.admin? && !current_user?(user) %>
        <%= link_to 'delete', user, method: :delete,
                                    data: { confirm: 'Are you shure?' } %>
    <% end %>
</li>