<% provide(:title, @user.name) %>

<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
    <% if @microposts.any? %>
        <div class="col-md-8">
            <h1>Microposts (<%= @microposts.size %>)</h1>
            <%= render partial: "micropost", collection: @microposts %>
        </div>

        <%= will_paginate @microposts %>
    <% end %>
</div>
